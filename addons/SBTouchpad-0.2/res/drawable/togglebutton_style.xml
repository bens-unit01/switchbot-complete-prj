<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- Pressed -->
	<item android:state_enabled="true" android:state_pressed="true" android:state_focused="true" android:drawable="@drawable/toggle_image_enabled_press_focus" />
	<item android:state_enabled="true" android:state_pressed="true" android:drawable="@drawable/toggle_image_enabled_press" />
	
	<!-- Checked -->
	<item android:state_enabled="true" android:state_checked="true" android:state_focused="true" android:drawable="@drawable/toggle_image_enabled_checked_focus" /> 	<!-- enabled & focused -->
	<item android:state_enabled="true" android:state_checked="true" android:drawable="@drawable/toggle_image_enabled_checked" /> 	<!-- enable  -->
	<item android:state_enabled="false" android:state_checked="true" android:drawable="@drawable/toggle_image_disabled_checked" /> 	<!-- disable -->
	
	<!-- Unchecked -->
	<item android:state_enabled="true" android:state_checked="false" android:state_focused="true" android:drawable="@drawable/toggle_image_enabled_unchecked_focus" /> 	<!-- enabled & focused -->
	<item android:state_enabled="true" android:state_checked="false" android:drawable="@drawable/toggle_image_enabled_unchecked" /> 	<!-- enable  -->
	<item android:state_enabled="false" android:state_checked="false" android:drawable="@drawable/toggle_image_disabled_unchecked" /> 	<!-- disable -->

</selector>