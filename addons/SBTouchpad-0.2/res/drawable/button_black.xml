<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="false" android:state_focused="true" android:drawable="@drawable/black_disabled_focus" /> <!-- disabled and focus-->
	<item android:state_enabled="true" android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/black_enabled_focus" /> <!-- enable and focus-->

	<item android:state_enabled="false" android:drawable="@drawable/black_disabled" /> <!-- disabled -->
	<item android:state_pressed="true" android:drawable="@drawable/black_pressed" /> <!-- pressed -->
	<item android:state_focused="true" android:drawable="@drawable/black_enabled" /> <!-- focused -->
	<item android:drawable="@drawable/black_enabled" /> <!-- default -->
</selector>