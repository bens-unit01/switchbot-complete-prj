package com.att.widgets.lib.button;

import android.content.Context;
import android.util.AttributeSet;

import com.att.widgets.lib.R;

/**
 * The Radio Button widget provides standard radio-button functionality.
 * It has three states: off, on, and disabled. Radio Button
 * widgets are used in groups. Selecting one button in a group automatically turns
 * off the groups other buttons. Only one member of the group can be on at a time.
 */
public class RadioButton extends android.widget.RadioButton {

	/**
	 * Creates a RadioButton widget	
	 * @param context
	 */
	public RadioButton(Context context) {
		super(context);
		init();
	}
	
	/**
	 * Creates an RadioButton Widget with a set of attributes.
	 * @param context
	 * @param attrs
	 */
	public RadioButton(Context context, AttributeSet attrs) {
		super(context, attrs);
		init();
	}
	
	/**
	 * Creates an RadioButton Widget with the defined style given by the user.
	 * @param context
	 * @param attrs
	 * @param defStyle
	 */
	public RadioButton(Context context, AttributeSet attrs, int defStyle) {
		super(context, attrs, defStyle);
		init();
	}
	
	private void init() {
		setButtonDrawable(R.drawable.radio_button_style);

	}

}
